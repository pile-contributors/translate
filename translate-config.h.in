#ifndef GUARD_TRANSLATE_CONFIG_H_INCLUDE
#define GUARD_TRANSLATE_CONFIG_H_INCLUDE

/**
 * @def Qt5Core_FOUND
 * @brief When defined indicates that the Qt 5 headers are available
 */
#ifndef Qt5Core_FOUND
#cmakedefine Qt5Core_FOUND
#endif

/**
 * @def Qt4_FOUND
 * @brief When defined indicates that the Qt 4 headers are available
 */
#ifndef Qt4_FOUND
#cmakedefine Qt4_FOUND
#endif

/**
 * @def PILES_HAVE_QT
 * @brief When defined indicates that either Qt 4 or Qt 5 headers are available
 */
#if defined(Qt5Core_FOUND) || defined(Qt4_FOUND)
#ifndef PILES_HAVE_QT
#define PILES_HAVE_QT
#endif
#endif

// use Qt definitions when available
#ifdef PILES_HAVE_QT
#include <QtGlobal>
#endif

//! the name of this project
#define TRANSLATE_PROJECT_NAME       "@TRANSLATE_NAME@"

//! major version (ABI not preserved between these)
#define TRANSLATE_MAJOR_VERSION      (@TRANSLATE_MAJOR_VERSION@)

//! minor version; ABI is preserved
#define TRANSLATE_MINOR_VERSION      (@TRANSLATE_MINOR_VERSION@)

//! bug fixes
#define TRANSLATE_PATCH_VERSION      (@TRANSLATE_PATCH_VERSION@)

//! the version as a 32-bit integer
#define TRANSLATE_VERSION            (\
    TRANSLATE_MAJOR_VERSION * 0x100000 + \
    TRANSLATE_MINOR_VERSION * 0x1000 + \
    TRANSLATE_PATCH_VERSION * 0x1)

//! version as a string
#define TRANSLATE_VERSION_STRING     "@TRANSLATE_VERSION_STRING@"

//! when it was build (UTC)
#define TRANSLATE_BUILD_TIME         "@TRANSLATE_BUILD_TIME@"


/**
 * @def TRANSLATE_DEBUG
 * @brief Indicates whether the debug features should be enabled or disabled
 */
#ifndef TRANSLATE_DEBUG
#  ifdef TRANSLATE_FORCE_DEBUG
#    define TRANSLATE_DEBUG 1
#  else
#cmakedefine TRANSLATE_DEBUG
#  endif
#endif


/**
 * @def TRANSLATE_STATIC
 * @brief If defined it indicates a static library being build
 */
#cmakedefine TRANSLATE_STATIC

/**
 * @def TRANSLATE_PILE
 * @brief If defined it indicates a pile usage
 */
#cmakedefine TRANSLATE_PILE


/**
 * @def TRANSLATE_SHARED
 * @brief If defined it indicates a shared library
 *
 * TRANSLATE_SHARED is defined when building the project
 * and undefined when a file from another project
 * includes the file.
 */


/**
 * @def TRANSLATE_EXPORT
 * @brief makes the sources compatible with all kinds of deployments.
 */
#if defined(TRANSLATE_STATIC)
#   define      TRANSLATE_EXPORT
#elif defined(TRANSLATE_PILE)
#   define      TRANSLATE_EXPORT      @TRANSLATE_EXPORT@
#elif defined(TRANSLATE_SHARED)
#   ifdef PILES_HAVE_QT
#       define  TRANSLATE_EXPORT      Q_DECL_EXPORT
#   elif defined(_MSC_VER)
#       define  TRANSLATE_EXPORT      __declspec(dllexport)
#   else
#       define  TRANSLATE_EXPORT      __attribute__((visibility("default")))
#   endif
#else
#   ifdef PILES_HAVE_QT
#       define  TRANSLATE_EXPORT      Q_DECL_IMPORT
#   elif defined(_MSC_VER)
#       define  TRANSLATE_EXPORT      __declspec(dllimport)
#   else
#       define  TRANSLATE_EXPORT      __attribute__((visibility("default")))
#   endif
#endif

#endif // GUARD_TRANSLATE_CONFIG_H_INCLUDE
